	<script type="text/javascript">
		function showPass(id1, id2) {
			var x = document.getElementById(id1);
			if (x.type === "password") {
				x.type = "text";
				document.getElementById(id2).innerHTML = 'hide';
			} else {
				x.type = "password";
				document.getElementById(id2).innerHTML = 'show';
			}
		}
	</script>
